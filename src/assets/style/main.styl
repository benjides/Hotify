@require 'colors'

*
  box-sizing border-box

body,
html
  width 100%
  height 100%
  font-family 'Space Mono', sans-serif
  margin 0
  color $primary-text
  background-color $main-white
  overflow hidden

.button, button, input[type="button"]
    padding 8px 10px
    background-color $main-white
    color $primary-text !important
    border 5px solid $primary-text
    text-decoration none
    font-size 18px
    font-family 'Montserrat'
    display inline-flex
    align-items center
    outline transparent
    cursor pointer
    font-style italic
    font-weight 900
    box-shadow 8px 8px 0px 0px
    position relative

h1,h2,h3,h4
    font-family 'Space Mono', monospace

.container
  max-width 420px
  margin 0 auto
